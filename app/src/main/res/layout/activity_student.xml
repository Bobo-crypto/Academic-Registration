<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="361dp"
        android:layout_height="169dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/header"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="90dp"
        android:text="Welcome"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textFontWeight="300000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/FName"
        android:layout_width="217dp"
        android:layout_height="29dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="10dp"
        android:text="First Name"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Lname"
        android:layout_width="216dp"
        android:layout_height="25dp"
        android:paddingLeft="10dp"
        android:text="Last Name"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/FName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FName"
        app:layout_constraintTop_toBottomOf="@+id/FName" />

    <Button
        android:id="@+id/viewCourse"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="View Courses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b" />


    <Button
        android:id="@+id/addCourse"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:text="ADD Course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/regCourses"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="View Registered Courses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCourse" />

    <Button
        android:id="@+id/b"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regCourses" />


    <TextView
        android:id="@+id/logo3"
        android:layout_width="138dp"
        android:layout_height="76dp"
        android:layout_marginTop="4dp"
        android:foreground="@mipmap/ic_logo"
        android:text="logo"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>